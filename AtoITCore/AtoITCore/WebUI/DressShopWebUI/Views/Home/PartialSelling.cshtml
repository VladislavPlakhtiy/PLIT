@model Domain.Entityes.Photo
@if (Model.Priority == true)
{
    <a href="@("#openModal" + Model.Product.ProductId)">
        <li class="product child">
            <img src="~/PhotoForDB/@Model.PhotoUrl" class="productPic" title="@Model.Product.Name" />
            @{
                if (Model.Product.Discount != 0)
                {
                    <div class="discount">
                        <span class="discountValue">@(Model.Product.Discount + "%")</span>
                    </div>
                    <h3 class="productName">
                        <p class="price">
                            <s>@((double)Model.Product.Price) </s> <font color="red">@((double)(Model.Product.Price - Model.Product.Price * Model.Product.Discount / 100))</font> грн
                        </p>"@Model.Product.Name"
                    </h3>
                }
                else
                {
                    <h3 class="productName">
                        <p class="price">@((double)Model.Product.Price) грн</p>"@Model.Product.Name"
                    </h3>
                }
            }
        </li>
    </a>

    <div id="@("openModal" + Model.Product.ProductId)" class="modalDialog">
        <div>
            <a href="#close" title="Закрыть" class="close">X</a>
            @foreach (var a in Model.Product.Photo)
            {
                if (a.Product.ProductId == Model.Product.ProductId)
                {
                    <img id="@("HiddenImgId" + a.PhotoId)" class="" title="@a.Product.Name" src="~/PhotoForDB/@a.PhotoUrl" height="80" width="75" />
                }
            }
            <p><strong>Имя -</strong> @Model.Product.Name</p>
            @{
                if (Model.Product.Discount != 0)
                {
                    <p>
                        <strong>Цена -</strong> @((double)(Model.Product.Price - Model.Product.Price * Model.Product.Discount / 100)) грн
                    </p>
                }
                else
                {
                    <p>
                        <strong>Цена -</strong> @((double)Model.Product.Price) грн
                    </p>
                }
                if (!Model.Product.Description.IsEmpty())
                {
                    <p><strong>Описание - </strong> @Model.Product.Description</p>
                }
                if (!Model.Product.SpecOffer.IsEmpty())
                {
                    <p><strong>Специальное предложение -</strong> @Model.Product.SpecOffer</p>
                }
            }
            <div class="addBasket">
                @using (Html.BeginForm("AddToBasket", "Basket"))
                {
                    <div class="pull-right">
                        @Html.HiddenFor(x => x.PhotoId)
                        @Html.Hidden("returnUrl", Request.Url?.PathAndQuery)
                        <input type="submit" class="addBasketText" value="Добавить в корзину" />
                    </div>
                }
            </div>
        </div>
    </div>
                }
