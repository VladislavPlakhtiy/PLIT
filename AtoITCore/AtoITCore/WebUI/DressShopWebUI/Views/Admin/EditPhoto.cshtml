@model IEnumerable<Domain.Entityes.Photo>

<table class="table" style="background-color: lightgrey">
    <tr>
        <th class="text-center">
            Фото
        </th>
        <th class="text-center">
            Приоритет
        </th>
        <th class="text-center">
            Действия
        </th>
    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>
                <img src="~/PhotoForDB/@i.PhotoUrl" width="60" height="70" />
            </td>
            <td>
                @if (i.Priority.
                    Equals(true))
                {

                    <i>Основное фото</i>
                }
                @if (i.Priority.
                    Equals(false))
                {

                    <i>Дополнительное фото</i>
                }
            </td>
            <td class="text-center">
                <input type="button" id="@(i.PhotoId+"ButtonEdit")"
                       class="btn btn-default btn-xs"
                       value="Установить как основное фото" />
                <script>
                    $(document)
                       .ready(function () {
                           $("#@(i.PhotoId+"ButtonEdit")")
                               .click(function () {
                                   //debugger;
                                   var data = {
                                       idProduct: ('@i.Product.ProductId'),
                                       id: ('@i.PhotoId')
                                   };
                                   //debugger;
                                   $.ajax({
                                       url: "/Admin/EditPhoto",
                                       type: "GET",
                                       data: data,
                                       success: function (data) {
                                           $("#photoId").html(data);
                                       }
                                   });
                               });
                       });
                </script>
            </td>
            @*<td class="text-center">
                <input type="button" id="@(i.PhotoId+"ButtonEdit")"
                       class="btn btn-default btn-xs"
                       value="Удалить фото" />
